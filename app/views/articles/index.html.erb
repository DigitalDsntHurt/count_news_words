<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Scrape session</th>
      <th>Publication</th>
      <th>Url</th>
      <th>Body</th>
      <th>Pub date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td valign="top"><%= article.scrape_session %></td>
        <td valign="top"><%= article.publication %></td>
        <td valign="top"><%= link_to article.url, article.url, :target=> "blank" %></td>
        <td valign="top"><%= article.body[0..250] unless article.body == nil %></td>
        <td valign="top"><%= article.pub_date %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
